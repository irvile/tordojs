{
  "name": "tordojs",
  "version": "0.10.1",
  "author": "irvile",
  "repository": "irvile/tordojs",
  "homepage": "https://github.com/irvile/tordojs#readme",
  "module": "dist/tordojs.esm.js",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "tordo": "./dist/cli/cli.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "Fauna",
    "serverless",
    "database"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build ",
    "build:cli": "esbuild src/cli.ts --bundle --platform=node --minify --sourcemap=external --outfile=dist/cli/cli.js",
    "test": "tsdx test",
    "test:watch": "tsdx test --watchAll",
    "test-cli": "TS_NODE_PROJECT='./tsconfig.cli.json' ts-node ./test/cli.ts",
    "lint": "tsdx lint",
    "prepare": "tsdx build && yarn build:cli",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "auto"
  },
  "size-limit": [
    {
      "path": "dist/tordojs.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/tordojs.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.12.0",
    "@types/luxon": "^1.27.1",
    "esbuild": "^0.12.20",
    "husky": "^6.0.0",
    "size-limit": "^4.12.0",
    "ts-node": "^10.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "commander": "^8.1.0",
    "dotenv": "^10.0.0",
    "faunadb": "^4.3.0",
    "luxon": "^2.0.1",
    "ora": "^5.4.1",
    "ts-import": "^2.0.39"
  }
}
